<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyleLargeWhite">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textStyleLargeBlack">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>

    </style>

    <style name="textStyleMediumWhite">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textStyleMediumBlack">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="textStyleSmallWhite">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textStyleSmallBlack">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textStyleSmallGray">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="contentHeader">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contentHeaderBlack">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="contentHeaderWhite">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contentHeaderExtralargeWhite">
        <item name="android:textSize">@dimen/font_extra_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contentHeaderBlue">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="contentHeaderGray">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="textPrice">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/green_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contentText">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="subContentHeader">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>
    <style name="subContentTextSmall">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="subContentTextMedium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="subContentTextMediumBlack">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="subContentTextLarge">
        <item name="android:textSize">@dimen/font_large</item>

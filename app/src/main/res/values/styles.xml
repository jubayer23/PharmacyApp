        <item name="android:textColor">@color/gray</item>
    </style>





    <style name="btnSubmitOrDoneSmall">
        <item name="android:background">@drawable/btn_selector_green_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnSubmitOrDoneNormal">
        <item name="android:background">@drawable/btn_selector_green_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnSubmitOrDoneLarge">
        <item name="android:background">@drawable/btn_selector_green_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
